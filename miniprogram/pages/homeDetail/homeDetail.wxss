.page{
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;

}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 16px 16px;
  margin: 0 auto;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.user-head {
  width: 100rpx;
  height: 100rpx;
  line-height: 36px;
  background-color: #ccc;
  margin-top: 5px;
}

.user-name-time {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 1px;
  margin-left: 10px;
}

.user-name {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20px;
  color: rgb(88, 103, 138);
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.user-publish-time {
  font-size: 15px;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 10%;
  margin-top: 14px;
}

.content-scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content-text {
  font-size: 18px;
  color: #666;
  margin-left: 10px;
}

.content-img {
  width: 100%;
  min-height: 100px;
  margin-left: 10px;
  margin-top: 10px;
  background-color: #999;
}

.line {
  width: 100%;
  height: 1px;
  margin-top: 20px;
  background-color: #ccc;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  z-index: -99;
}

.like-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
}


.like-icon {
  width: 48px;
  height: 48px;
  margin: 40rpx;
}

.btn-class{
  margin: 40rpx;
  background-color: burlywood;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.like-text {
  font-size: 16px;
  color: rgb(17, 14, 16);
  font-weight: bold;
}

.replay_content{
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-bottom: 200rpx;
  margin-left: 18rpx;
  width: 95%;
}

.tip-text{
  margin:10rpx;
   
}

/* 列表 */
.CircleList{
  background: white;
  margin-bottom: 1px;
  border-bottom: 1px solid whitesmoke;
  border-top: 1px solid whitesmoke;
}
.body-view{
  display: flex;
}

.left-view{
  width: 150rpx;
